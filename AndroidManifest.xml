<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      android:versionName="1.0" package="com.ecosistir.android">
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" 
                  android:required="true"/>
    
    <supports-screens android:smallScreens="true" 
                      android:normalScreens="true"
                      android:largeScreens="true" 
                      android:anyDensity="true" /> 

    <application android:icon="@drawable/icon" android:label="@string/app_name" 
                 android:debuggable="true">
        <activity android:name="Main"
                  android:label="@string/app_name" 
                  android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="GameForm" android:screenOrientation="landscape" />
        <activity android:name="PlayerForm" android:screenOrientation="landscape" />
        <activity android:name="ARGameView" android:screenOrientation="landscape"
                  android:clearTaskOnLaunch="true"
                  android:noHistory="true" />

    </application>
</manifest>